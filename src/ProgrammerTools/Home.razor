@page "/"

<div>this is some</div>
<div id="vue-app">
    <layout>
        <router-view v-slot="{ Component }">
            <keep-alive>
                <component :is="Component" />
            </keep-alive>
        </router-view>
    </layout>
</div>

<script>
    let routes = getVueRoutes();
    let routerData = VueRouter.createRouter({
        history: VueRouter.createWebHashHistory(),
        routes,
    });

    let app = Vue.createApp({
        components: {
            layout: Vue.defineAsyncComponent(async () => await importComponent('layout')),
        },
        data() {
            return {
                size: 5
            }
        },
        mounted() {
            window.onresize = this.setSize;
            this.setSize();
        },
        methods: {
            setSize() {
                let width = window.innerWidth;

                if (width < 768) {
                    this.size = 1;
                } else if (width < 1024) {
                    this.size = 2;
                } else if (width < 1366) {
                    this.size = 3;
                } else if (width < 1920) {
                    this.size = 4;
                } else this.size = 5;
            },
        }
    });
    app.use(i18n);
    app.use(ViewUIPlus, { i18n });
    app.use(routerData);
    app.mount('#vue-app');
</script>